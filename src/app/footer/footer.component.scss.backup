// Modern Footer Styles - Theme Aware
.modern-footer {
  position: relative;
  color: #374151;
  overflow: hidden;
  transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  
  // Light Mode (Default)
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 50%, #f3f4f6 100%);
  border-top: 1px solid #e5e7eb;
}

// Animated Background
.footer-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;

  .animated-waves {
    position: absolute;
    top: -50px;
    left: 0;
    width: 100%;
    height: 120px;
    opacity: 0.3;

    svg {
      width: 100%;
      height: 100%;
    }
  }

  .floating-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    .particle {
      position: absolute;
      font-size: 20px;
      animation: particleFloat 12s ease-in-out infinite;
      opacity: 0.4;
      color: #0891b2;

      lucide-icon {
        color: #0891b2 !important;
      }

      &.particle-1 {
        top: 20%;
        left: 10%;
        animation-delay: 0s;
      }

      &.particle-2 {
        top: 60%;
        right: 20%;
        animation-delay: 3s;
        color: #8b5cf6;

        lucide-icon {
          color: #8b5cf6 !important;
        }
      }

      &.particle-3 {
        bottom: 30%;
        left: 25%;
        animation-delay: 6s;
        color: #06b6d4;

        lucide-icon {
          color: #06b6d4 !important;
        }
      }

      &.particle-4 {
        top: 40%;
        right: 10%;
        animation-delay: 9s;
        color: #10b981;

        lucide-icon {
          color: #10b981 !important;
        }
      }
    }
  }
}

// Footer Content
.footer-content {
  position: relative;
  z-index: 1;
  padding: 80px 0 0;
}

// Container
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

// Main Footer Section
.footer-main {
  margin-bottom: 60px;

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 60px;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
}

// Footer Sections
.footer-section {
  h4 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #0891b2;
    transition: color 0.3s ease;
    

  &.company-info {
    .company-logo {
      width: 50px;
      height: 50px;
      margin-bottom: 16px;

      .logo-img {
        width: 100%;
        height: 100%;
        filter: none;
        
}

// Footer Links
.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;

  li {
    margin-bottom: 12px;

    a {
      color: #4b5563;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      padding: 4px 0;
      font-weight: 500;
      
}

// Social Links
.social-links {
  display: flex;
  gap: 16px;
  margin-top: 20px;

  .social-link {
    width: 40px;
    height: 40px;
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    
}

// Contact Info
.contact-info {
  .contact-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .contact-item {
    display: flex;
    gap: 16px;
    align-items: flex-start;

    .contact-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #0891b2, #3b82f6);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      
}

// Newsletter Section
.newsletter-section {
  background: var(--glass-bg-subtle);
  border-radius: 16px;
  border: 1px solid var(--glass-bg-light);
  padding: 40px;
  margin-bottom: 40px;

  .newsletter-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 20px;
      text-align: center;
    }
  }

  .newsletter-text {
    h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 8px;
      color: var(--orange-400);
    }

    p {
      opacity: 0.9;
      line-height: 1.6;
    }
  }

  .newsletter-form {
    .input-group {
      display: flex;
      gap: 12px;

      @media (max-width: 768px) {
        flex-direction: column;
      }

      input {
        flex: 1;
        padding: 12px 16px;
        background: var(--glass-bg-light);
        border: 1px solid var(--glass-bg-strong);
        border-radius: 8px;
        color: white;
        font-size: 14px;
        outline: none;
        transition: all 0.3s ease;

        &::placeholder {
          color: var(--text-white-muted);
        }

        &:focus {
          border-color: var(--orange-400);
          background: var(--glass-bg-medium);
        }
      }

      .subscribe-btn {
        padding: 12px 24px;
        background: var(--gradient-orange);
        color: var(--gray-800);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        white-space: nowrap;

        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 5px 15px var(--shadow-orange);
        }

        i {
          font-size: 12px;
        }
      }
    }
  }
}

// Footer Bottom
.footer-bottom {
  border-top: 1px solid var(--glass-bg-light);
  padding: 30px 0;
  transition: border-color 0.3s ease;
  

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;

    @media (max-width: 768px) {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .copyright {
      p {
        color: #6b7280;
        font-size: 14px;
        transition: color 0.3s ease;
      }
    }
  }
}

// Animations
@keyframes particleFloat {
  0%,
  100% {
    transform: translateY(0px) rotate(0deg);
  }
  25% {
    transform: translateY(-20px) rotate(90deg);
  }
  50% {
    transform: translateY(-10px) rotate(180deg);
  }
  75% {
    transform: translateY(-15px) rotate(270deg);
  }
}

@keyframes heartbeat {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

// Responsive Design
@media (max-width: 768px) {
  .footer-content {
    padding: 60px 0 0;
  }

  .footer-main {
    margin-bottom: 40px;
  }

  .newsletter-section {
    padding: 30px 20px;
  }

  .social-links {
    justify-content: center;
  }

  .contact-info .contact-items {
    gap: 16px;
  }
}
